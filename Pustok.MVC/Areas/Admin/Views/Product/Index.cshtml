@model ProductListViewModel

<div class="container mt-4">
    <p class="card-description">
        <a asp-action="Create" class="btn btn-success">Create</a>
    </p>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Stock Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Items)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.OriginalPrice</td>
                    <td>@product.StockQuantity</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="product" asp-action="update" asp-route-id="@product.Id">Update</a>
                        <a class="btn btn-danger" asp-controller="product" asp-action="delete" asp-route-id="@product.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination Controls -->
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @if (Model.HasPrevious)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.Index - 1)">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link">Previous</a>
                </li>
            }

            @for (var i = 0; i < Model.Pages; i++)
            {
                <li class="page-item @(i == Model.Index ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                </li>
            }

            @if (Model.HasNext)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.Index + 1)">Next</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>
