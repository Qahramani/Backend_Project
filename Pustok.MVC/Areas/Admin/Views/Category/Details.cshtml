@model CategoryViewModel

<div class="container mt-5">
    <div class="row">
        <!-- Category Information -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">@Model.Name</h3>
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded mb-3" alt="@Model.Name" />
                    }
                    <p class="card-text">This is the category detail page for <strong>@Model.Name</strong>.</p>

                    @if (Model.ParentCategory != null)
                    {
                        <p><strong>Parent Category:</strong> @Model.ParentCategory.Name</p>
                    }
                    else
                    {
                        <p><strong>Parent Category:</strong> None</p>
                    }
                </div>
            </div>
        </div>

        <!-- Subcategories Section -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Subcategories
                </div>
                <ul class="list-group list-group-flush">
                    @if (Model.SubCategories != null && Model.SubCategories.Any())
                    {
                        @foreach (var subcategory in Model.SubCategories)
                        {
                            <li class="list-group-item">
                                <a asp-action="Details" asp-route-id="@subcategory.Id" class="text-decoration-none">
                                    @subcategory.Name
                                </a>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item">No subcategories available.</li>
                    }
                </ul>
            </div>
        </div>
    </div>
