@model List<GetBasketViewModel> 
<div class="cart-block">
    <div class="cart-total">
        <span class="text-number">
            @Model.Count
        </span>
        <span class="text-item">
            Shopping Cart
        </span>
        <span class="price">
           @Model.Sum(x => x.Price * x.Count) $
            <i class="fas fa-chevron-down"></i>
        </span>
    </div>
    <div class="cart-dropdown-block">
        @foreach (var product in Model)
        {
            
        <div class=" single-cart-block ">
            <div class="cart-product">
                <a href="product-details.html" class="image">
                    <img src="@product.ImagePath" alt="">
                </a>
                <div class="content">
                    <h3 class="title">
                        <a href="product-details.html">
                            @product.Name
                        </a>
                    </h3>
                    <p class="price"><span class="qty">@product.Count ×</span> @product.Price</p>
                    <button class="cross-btn"><i class="fas fa-times"></i></button>
                </div>
            </div>
        </div>
        }
        <div class=" single-cart-block ">
            <div class="btn-block">
                <a asp-controller="basket" asp-action="shoppingcard" class="btn">
                    View Cart <i class="fas fa-chevron-right"></i>
                </a>
                <a href="checkout.html" class="btn btn--primary">
                    Check Out <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>